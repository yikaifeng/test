function checkEntry() {
//–¢–µ–∫—É—â–∞—è –∑–∞–ø–∏—Å—å
var curEntry = entry();

//–ü–æ–ª—è
var fldType = curEntry.field ("–¢–∏–ø");
var fldStatus = curEntry.field ("–°—Ç–∞—Ç—É—Å");
var fldStartDate = curEntry.field ("–î–∞—Ç–∞ –Ω–∞—á–∞–ª–∞");
var fldStartTime = curEntry.field ("–í—Ä–µ–º—è –Ω–∞—á–∞–ª–∞");
var fldEndDate = curEntry.field ("–î–∞—Ç–∞ –æ–∫–æ–Ω—á–∞–Ω–∏—è");
var fldEndTime = curEntry.field ("–í—Ä–µ–º—è –æ–∫–æ–Ω—á–∞–Ω–∏—è");

//–ö–æ–Ω—Å—Ç–∞–Ω—Ç—ã
var constPeriod = "üóìÔ∏è –ø–æ–≤—Ç–æ—Ä.";
var constPlan = "‚è≥ –≤ –ø–ª–∞–Ω–µ";
var constDone = "‚úîÔ∏è –∑–∞–≤–µ—Ä—à–µ–Ω–æ";

//–°–æ–æ–±—â–µ–Ω–∏–µ
var strResult = "–ò—Å–ø—Ä–∞–≤–ª–µ–Ω–æ:";

//–ü—Ä–æ–≤–µ—Ä–∫–∞
if (fldType==constPeriod && fldStatus==constDone) {
	curEntry.set("–°—Ç–∞—Ç—É—Å", constPlan);
	strResult = strResult + "\n*—Å—Ç–∞—Ç—É—Å";
}

if (fldEndDate!=undefined && fldEndDate<fldStartDate) {
	curEntry.set("–î–∞—Ç–∞ –æ–∫–æ–Ω—á–∞–Ω–∏—è", fldStartDate);
	strResult = strResult + "\n*–¥–∞—Ç–∞ –æ–∫–æ–Ω—á–∞–Ω–∏—è";
}

if (fldEndDate==undefined && fldEndTime!=undefined) {
	curEntry.set("–î–∞—Ç–∞ –æ–∫–æ–Ω—á–∞–Ω–∏—è", fldStartDate);
	strResult = strResult + "\n*–¥–∞—Ç–∞ –æ–∫–æ–Ω—á–∞–Ω–∏—è";
	curEntry.recalc();
}

if (fldEndDate==fldStartDate && fldEndTime<fldStartTime) {
	curEntry.set("–í—Ä–µ–º—è –æ–∫–æ–Ω—á–∞–Ω–∏—è", fldStartTime);
	strResult = strResult + "\n*–≤—Ä–µ–º—è –æ–∫–æ–Ω—á–∞–Ω–∏—è";
}

curEntry.recalc();
if (strResult!="–ò—Å–ø—Ä–∞–≤–ª–µ–Ω–æ:") {
	message(strResult);	
}

}
